{
  "name": "angular-validators",
  "version": "0.0.0-alpha-0",
  "description": "More validators for Angular (2+)",
   "scripts": {
    "karma": "karma start --single-run",
    "test:unit": "npm run karma",
    "test:ngc": "ngc -p ./spec/ngc/tsconfig.ngc.json",
    "test": "npm run test:unit && npm run test:ngc",
    "clean:pre": "rimraf release",
    "clean:post": "rimraf \"src/**/*.ngfactory.ts\" && rimraf \"src/**/*.ngsummary.json\" ",
    "clean:ngc": "rimraf \"spec/ngc/output\" && rimraf \"spec/ngc/ngfactory\"",
    "copy": "cpy LICENSE package.json README.md release",
    "build:js": "ngc -p tsconfig.dist.json",
    "build:umd": "rollup -c rollup.config.js",
    "build:uglify": "uglifyjs -c --screw-ie8 --comments -o ./release/bundles/angular-validators.min.umd.js ./release/bundles/angular-validators.umd.js",
    "prebuild": "npm run test && npm run clean:pre",
    "postbuild": "npm run clean:post && npm run copy",
    "build": "npm run build:js && npm run build:umd && npm run build:uglify",
    "t" : "karma start",
    "p" : "npm run build && npm publish release",
    "posttest": "npm run clean:ngc"
  },
  "peerDependencies": {
    "@angular/forms":"^2.0.0",
    "@angular/core": "^2.0.0",
    "@angular/common": "^2.0.0"
  },
  "devDependencies": {
    "@angular/forms":"^2.0.0",
    "@angular/core": "^2.0.0",
    "@angular/common": "^2.0.0",
    "@angular/compiler": "^2.0.0",
    "@angular/compiler-cli": "^2.0.0",
    "@angular/platform-browser": "^2.0.0",
    "@angular/platform-browser-dynamic": "^2.0.0",
    "@angular/platform-server": "^2.0.0",
    "@types/jasmine": "^2.2.33",
    "@types/node": "^6.0.38",
    "awesome-typescript-loader": "^2.2.1",
    "core-js": "^2.4.1",
    "cpy-cli": "^1.0.1",
    "istanbul-instrumenter-loader": "^0.2.0",
    "jasmine": "^2.5.0",
    "karma": "^1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.1.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.34.13",
    "rxjs": "^5.0.1",
    "ts-loader": "^0.8.2",
    "tslint": "^3.15.1",
    "tslint-loader": "^2.1.5",
    "typescript": "~2.0.2",
    "uglifyjs": "^2.4.10",
    "webpack": "2.1.0-beta.21",
    "zone.js": "^0.7.2"
  },
  "repository": {
    "url": "https://github.com/Toxicable/angular-validators/tree/master",
    "type": "public"
  },
  "author": "Fabian Wiles",
  "license": "MIT"
}
